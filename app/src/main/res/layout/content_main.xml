<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ilvinas.stalozaidimuklubas.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bckgrnd"
        android:backgroundTintMode="multiply"
        android:backgroundTint="@color/colorTint"
        android:orientation="vertical"
        android:gravity="center">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_dbcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:textColor="@color/colorText"/>

        <Space
            android:layout_height="25dp"
            android:layout_width="match_parent"/>

        <Button
            android:id="@+id/button_addnew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_addnew"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"/>

        <Space
            android:layout_height="25dp"
            android:layout_width="match_parent"/>

        <Button
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_logout"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
